@page "/item"

<div class="container">
    <button type="button" class="btn btn-primary" onclick="@(() => OnAddNewClicked())">Add new Item</button>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price(VND)</th>
                <th>Imported From</th>
                <th>Imported Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Items)
            {
            <td>@item.ItemName</td>
            <td>@item.Quantity</td>
            <td>@item.Price.ToString("N0")</td>
            <td>@item.ImportedFrom</td>
            <td>@item.CreatedDate</td>
            <td> <button type="button" class="btn btn-success" style="background-color: blue">Edit</button></td>
            }
        </tbody>
    </table>
</div>