@page "/item"

<div class="container">
    <button type="button" class="btn btn-primary" onclick="@(() => OnAddNewClicked())">Add new Item</button>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Original Price</th>
                <th>Price(VND)</th>
                <th>Imported From</th>
                <th>Imported Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var item in Items)
                {
                    <td>@item.ItemName</td>
                    <td>@item.Quantity</td>
                    <td>@item.OriginalPrice</td>
                    <td>@item.PricePerEach.ToString("N0")</td>
                    <td>@item.ImportedFrom</td>
                    <td>@item.CreatedDate</td>
                    <td> <button type="button" class="btn btn-success" style="background-color: blue">Edit</button></td>
                }
            </tr>
        </tbody>
    </table>
</div>