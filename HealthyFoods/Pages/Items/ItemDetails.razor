@page "/item/{itemId}"

<div class="Container">
    <EditForm Model="@Item" OnValidSubmit="@(() => Summit())">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <label for="fname">Item Name</label>
        <input type="text" id="fname" name="itemName" placeholder="Item name.." @bind="Item.ItemName">

        <label for="lname">Quantity</label>
        <input type="number" id="lname" name="amount" placeholder="Quantity.." @bind="Item.Quantity">

        <label for="lname">Price</label>
        <input type="number" id="lname" name="price" placeholder="Price.." @bind="Item.Price">

        <label for="lname">Imported from</label>
        <input type="text" id="lname" name="importedFrom" placeholder="Imported from.." @bind="Item.ImportedFrom">

        <label for="lname">Imported Date(MM/dd/yyyy)</label>
        <input type="datetime-local" id="lname" name="importedDate" placeholder="" @bind="Item.ImportedDate" disabled>
        <button type="submit">Submit</button>
    </EditForm>

</div>