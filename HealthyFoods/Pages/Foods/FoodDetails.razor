@page "/food/{foodId}"

<div class="Container">
    <EditForm Model="@Food" OnValidSubmit="@(() => Summit())">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <label for="fname">Food Name</label>
        <input type="text" id="fname" name="foodName" placeholder="Food name.." @bind="Food.FoodName">

        <label for="lname">Amount</label>
        <input type="number" id="lname" step="0.01" name="amount" placeholder="Amount.." @bind="Food.Amount">

        <label for="lname">Original Price</label>
        <input type="number" id="lname" name="orgprice" placeholder="Original price.." @bind="Food.OriginalPrice">

        <label for="lname">Price Per Kg</label>
        <input type="number" id="lname" name="price" placeholder="Price.." @bind="Food.PricePerKg">

        <label for="lname">Imported from</label>
        <input type="text" id="lname" name="importedFrom" placeholder="Imported from.." @bind="Food.ImportedFrom">

        <label for="lname">Imported Date(MM/dd/yyyy)</label>
        <input type="datetime-local" id="lname" name="importedDate" placeholder="" @bind="Food.ImportedDate" disabled>
        <button type="submit">Submit</button>
    </EditForm>

</div>